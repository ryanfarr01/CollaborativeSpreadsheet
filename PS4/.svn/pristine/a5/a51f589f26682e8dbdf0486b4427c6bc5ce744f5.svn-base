        [TestMethod]
        public void Constructor0()
        {
            SpreadSheet spreadsheet = new SpreadSheet();
            List<string> list = new List<string>(spreadsheet.GetNamesOfAllNonemptyCells());
            Assert.AreEqual(0, list.Count); // the spreadsheet has only empty cells

        }

        [TestMethod]
